<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/splash_screen" />

    <TextView
        android:id="@+id/tv_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_user"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textColor="@color/colorPrimaryDark" />
    <EditText
        android:id="@+id/et_email1"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_email1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/box"
        android:elevation="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/tv_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email1"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:text="@string/password"
        android:textColor="@color/colorPrimaryDark" />
    <EditText
        android:id="@+id/et_password1"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/box"
        android:elevation="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rectangle_blue"
        android:ems="10"
        android:text="Register"
        android:textColor="#FFFFFF" />
</RelativeLayout>